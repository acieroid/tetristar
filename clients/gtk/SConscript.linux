Import('env', 'CFLAGS')

sources = ['main.c', 'connect.c', 'network.c']
LIBS = ['glib-2.0', 'gtk+-2.0']

for lib in LIBS:
    env.ParseConfig('pkg-config ' + lib + ' --cflags --libs')

env['LIBS'] += ['-lenet', '-lpthread']

client = env.Program(target = 'client', source = sources,
                     CFLAGS = CFLAGS);
